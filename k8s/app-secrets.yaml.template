apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  labels:
    app: student-management-system
type: Opaque
stringData:
  # MongoDB connection URI
  # Format: mongodb://<service-name>:<port>/<database-name>
  mongodb_uri: "mongodb://mongodb:27017/examdb"
  
  # Session secret for express-session
  # IMPORTANT: Replace this with a strong random secret before deploying
  # Generate using: openssl rand -base64 32
  session_secret: "REPLACE_WITH_STRONG_RANDOM_SECRET"
